---
// ui
import MainLayout from "@ui/layouts/MainLayout.astro";
import Footer from "@ui/astro/Footer.astro";

// lib
import { noodleFullBody } from "@lib/db/asset-queries/noodleFullBody";
import { env } from "@lib/sharedEnv";

const siteInfo = {
  title: "Let's work together!",
  description:
    "My interactive resume featuring some projects I've worked on. I'd love to work with you!",
};

const src = env.PUBLIC_ASSETS + "/" + noodleFullBody.id + "?key=medium";
const { title, description } = siteInfo;
---

<MainLayout {title} {description}>
  <main>
    <slot />
  </main>
  <Footer>
    <img
      {src}
      alt={noodleFullBody.description}
      class:list={[
        "absolute -left-32 -scale-x-100",
        "drop-shadow-lg",
        "invisible md:visible portrait:hidden",
        "bottom-36 lg:bottom-48",
      ]}
    />
  </Footer>
</MainLayout>
