---
import MainLayout from "@ui/layouts/MainLayout.astro";
import Heading from "@ui/react/Heading";
import Section from "@ui/react/Section";
import { env } from "@lib/sharedEnv";
import { noodleAvatar } from "@lib/db/asset-queries/noodle-avatar";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const asset = env.PUBLIC_ASSETS;
---

<MainLayout {title} {description}>
  <main>
    <Section
      classes="h-screen flex items-center"
      innerClasses="flex portrait:flex-col gap-10 items-center"
    >
      <img
        src={`${asset}/${noodleAvatar.id}?key=icon`}
        alt={noodleAvatar.description}
        height="200"
        width="200"
      />
      <div class="flex flex-col pb-5">
        <Heading tagName="h1" size="h1" classes="tracking-wide">
          <slot name="heading" />
        </Heading>
        <slot />
      </div>
    </Section>
  </main>
</MainLayout>
