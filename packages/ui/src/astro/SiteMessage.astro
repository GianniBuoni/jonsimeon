---
import MainLayout from "@ui/layouts/MainLayout.astro";
import Heading from "@ui/react/Heading";
import Section from "@ui/react/Section";

interface Props {
  title: string;
  description: string;
  imgSrc: string;
  alt: string;
  message: string;
}

const { title, description, imgSrc, alt, message } = Astro.props;
---

<MainLayout {title} {description}>
  <main>
    <Section
      classes="h-screen flex items-center"
      innerClasses="flex portrait:flex-col gap-10 items-center"
    >
      <img src={imgSrc} alt={alt} height="200" width="200" />
      <div class="flex flex-col pb-5">
        <Heading tagName="h1" size="h1">{message}</Heading>
        <slot />
      </div>
    </Section>
  </main>
</MainLayout>
