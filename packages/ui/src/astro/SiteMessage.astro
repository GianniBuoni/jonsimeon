---
import MainLayout from "#layouts/MainLayout";
import Heading from "#react/Heading";
import Section from "#react/Section";

import { env } from "@jonsimeon/lib/env";
import { noodleAvatar } from "@jonsimeon/lib/db";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const asset = env.PUBLIC_ASSETS;
---

<MainLayout {title} {description}>
  <main>
    <Section innerClasses="h-screen">
      <div class="w-full h-full grid grid-row-4 justify-items-center gap-5">
        <img
          src={`${asset}/${noodleAvatar.id}?key=icon`}
          alt={noodleAvatar.description}
          height="200"
          width="200"
          class="row-start-2 place-self-center"
        />
        <div
          class="flex flex-col px-5 pb-5 row-start-3 row-span-2 min-h-[45vh]"
        >
          <slot />
        </div>
      </div>
    </Section>
  </main>
</MainLayout>
