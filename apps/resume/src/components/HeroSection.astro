---
import { Icon } from "astro-icon/components";

import { Section } from "@jonsimeon/ui/react";
import { HeroGreeting } from "@jonsimeon/ui/react";
import { Logo } from "@jonsimeon/ui/react";
import { HeroBg } from "@jonsimeon/ui/react";

import { env } from "@jonsimeon/lib/env";
import { heroImage } from "@jonsimeon/lib/db";
const imgSrc = env.PUBLIC_ASSETS + "/" + heroImage.id;
---

<Section
  classes="h-screen bg-base-300"
  innerClasses={`flex flex-col h-full`}
  id="home"
  aria-label="Welcome, I'm Jon Simeon"
>
  <HeroBg {imgSrc} client:load />
  <Logo />
  <HeroGreeting first="Hello!" second={`Let's work\ntogether!`} client:visible
    ><p>Get to know me! Scroll down to see what I've been up to.</p>
  </HeroGreeting>
  <a href="#resume" class="z-20">
    <Icon
      name="mdi:arrow-down-circle"
      width={40}
      height={40}
      class="animate-bounce text-accent mb-10 lg:mb-5"
    />
  </a>
</Section>
