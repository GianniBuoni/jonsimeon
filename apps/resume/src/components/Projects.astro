---
//components
import Section from "@ui/react/Section";
import Heading from "@ui/react/Heading";
import CarouselControls from "@ui/react/carousel/CarouselControls";
import Card from "@ui/react/Card";
import CarouselWithModal from "@ui/react/carousel/CarouselWithModal";

// lib
import type { CarouselSettings } from "@lib/stores/types";
import projects from "@resume/lib/resumeProjects";
import { env } from "@lib/sharedEnv";

const settings: CarouselSettings = {
  offset: 300,
  maxLength: projects.length - 1,
};
---

<Section
  id="projects"
  aria-label="Featured set of my favorite projects"
  classes="landscape:min-h-screen lg:max-w-lg"
  overrideOverflow={true}
>
  <Heading tagName="h3" size="h1">Projects</Heading>
  <Card classes="mb-5 h-12 flex justify-center">
    <CarouselControls store="modal" {settings} client:visible />
  </Card>
  <CarouselWithModal {projects} assets={env.PUBLIC_ASSETS} client:visible/>
</Section>
