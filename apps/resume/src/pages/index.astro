---
import ResumeLayout from "@ui/layouts/ResumeLayout.astro";
import Section from "@ui/react/Section";
import Marquee from "@ui/react/Marquee";
import HeroSection from "../components/HeroSection.astro";
import { Icon } from "astro-icon/components";
---

<ResumeLayout>
  <HeroSection />
  <Marquee
    client:visible
    repeat={20}
    speed={3}
    classes="bg-base-300 text-neutral py-1 sticky top-0 z-20"
  >
    <div class="space-x-2 flex items-center">
      <span>Let's work together!</span>
      <Icon name="mdi:star" />
      <span>It'd be real fun!</span>
      <Icon name="mdi:star" />
    </div>
  </Marquee>
  <Section id="resume"> Resume</Section>
  <Section>Projects</Section>
  <Section>Experience</Section>
</ResumeLayout>
