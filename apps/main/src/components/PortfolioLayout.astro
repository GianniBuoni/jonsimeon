---
import { Footer } from "@jonsimeon/ui/astro";
import { MainLayout } from "@jonsimeon/ui/layouts";
import { Logo, Marquee, Section } from "@jonsimeon/ui/react";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "My Portfolio",
  description = "Jon Simeon is a designer, illustrator, and programmer based in Massachusetts — this is his portfolio!",
} = Astro.props;
---

<MainLayout {title} {description}>
  <main>
    <Marquee
      client:visible
      repeat={10}
      speed={10}
      classes="bg-base-300 text-neutral py-1 sticky top-0 z-20"
    >
      <span>
        Jon Simeon is a designer, illustrator, and programmer based in
        Massachusetts &nbsp;•
      </span>
    </Marquee>
    <!--TO DO: Set up grid for nav and content-->
    <Section classes="min-h-[95vh]" innerClasses="md:pt-7">
      <div class="fixed top-15">
        <Logo />
        <!-- nav goes here: design, illustration, all projects, resume, blog, contact -->
        <!-- nav span-col-1 turns into dropdown on mobile -->
      </div>
      <div class="grid grid-cols-9 gap-10 items-start">
        <!-- content spans the rest of the available width, full width on mobile -->
        <div class="col-start-3 col-span-7">
          <slot />
        </div>
      </div>
    </Section>
  </main>
  <Footer />
</MainLayout>
